@using MVC.Services.Interfaces

@inject IIdentityParser<ApplicationUserVM> UserManager

@if (Context.User.Identity!.IsAuthenticated)
{
    <form asp-area=string.Empty asp-controller="Account" asp-action="SignOut" method="post" id="logoutForm" class="header__login">
            <span class="header__username">@UserManager.Parse(User).Name</span>
            <button type="submit" class="header__button button">Logout</button>
    </form>
}
else
{
    <a asp-area=string.Empty asp-controller="Account" asp-action="SignIn" class="header__button button">
        <img src="../images/login.png" alt="Basket" class="basketLogo">Login
    </a>
}
